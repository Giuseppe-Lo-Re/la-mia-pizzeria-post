@model List<Pizza>

@if (Model.Count() == 0)
{
    <h4 class="text-center">Pizze non presenti</h4>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Descrizione</th>
                <th>Immagine</th>
                <th>Prezzo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Pizza pizza in Model)
            {
                <tr>
                    <td class="title">@pizza.Name</td>
                    <td class="description">
                        @pizza.Description
                    </td>
                    <td class="image">
                        <img class="post-list-image" src="@pizza.Image" alt="pizza" width="600" height="300">
                    </td>
                    <td class="price">
                        @pizza.Price euro
                    </td>
                    <td>
                        <a class="btn btn-success">Dettagli</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}